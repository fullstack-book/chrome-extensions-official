{
    "manifest_version": 3,
    "name": "chrome.commands",
    "description": "chrome.commands API 基础用法",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "open-logger": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "打开日志的命令"
        }
    }
}